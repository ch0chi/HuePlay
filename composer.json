{
    "name": "michaelquattrochi/hueplay",
    "description": "A development playground for tinkering with my Philips Hue lights.",
    "type": "project",
    "authors": [
        {
            "name": "Michael Quattrochi",
            "email": "mquattrochi@gmail.com"
        }
    ],
    "require": {
        "vlucas/phpdotenv": "^4.1",
        "guzzlehttp/guzzle": "~6.0",
        "php": "^7.3"
    },

  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
    "require-dev": {
      "roave/security-advisories": "dev-master"
      ,
      "phpunit/phpunit": "^9.1"
    }
}
